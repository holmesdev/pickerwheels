root = true

[*]
indent_style = space
indent_size = 2
charset = utf-8
trim_trailing_whitespace = true
insert_final_newline = true
end_of_line = lf
max_line_length = 140

[*.js]
quote_type = single

[*.ts]
quote_type = single

[*.tsx]
quote_type = single

[*.json]
quote_type = double

[*.yml]
quote_type = double

[*.py]
quote_type = double
indent_size = 4

[Makefile]
indent_style = tab